<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lingc.coolapkconsole">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.lingc.coolapkconsole.MyApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Transparent">
        <activity android:name="com.lingc.coolapkconsole.activities.SettingsActivity"
            android:theme="@style/AppTheme.HasActionBar"
            android:label="@string/action_settings" />
        <activity android:name="com.lingc.coolapkconsole.activities.MainActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.lingc.coolapkconsole.activities.SplashActivity"
            android:theme="@style/SplashStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lingc.coolapkconsole.activities.AuthActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.lingc.coolapkconsole.activities.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.Transparent.Detail"/>
    </application>

</manifest>